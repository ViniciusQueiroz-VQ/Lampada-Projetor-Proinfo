#!/bin/bash
vendor=$(cat /lib/lampada-projetor-proinfo-libs/vendor)

isReboot=$(systemctl list-jobs | grep 'reboot.target')

if [ "$isReboot" == "" ]; then

         case $vendor in
           "epson") # If the projector manufacturer is Epson.
             cd /bin/
             epson-projector-cmd poweroff
           ;;
           
           *) # If the projector manufacturer is benq or others.
             # cd /lib/lampada-projetor-proinfo-libs/
             # cat poff.txt > /dev/ttyS1 
             echo -e "\x0D*pow=off#\x0D" > /dev/ttyS1
           ;;
           
         esac
fi
exit
